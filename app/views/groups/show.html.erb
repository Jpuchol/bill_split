<% provide(:title, 'Group') %>

<div class="row">
  <aside class="span3">
    <section>
      <h1>
        Name : <%=@group.name %>
        <%= link_to image_tag("edit.png", :size => "30x30"),
                 edit_group_path(@group) %> 
        <%= link_to image_tag('delete.png', :size => "30x30"),
                 @group, method: :delete, data: { confirm: 'Are you sure?' } %>
      </h1>
      <p> Description of the group : <%= @group.comment %> </p>
      <p> <%= pluralize(@group.members.count, "member")%> </p>

    </section>

    <section>
      <%= render :partial => 'bill_form', :locals => { :group => @group }%>
    </section>
	
  </aside>
  <div class="span7 offset1">
    <%= render 'users' %>
  </div>
</div>
