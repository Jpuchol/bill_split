<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= image_tag @user.imag_url, :size => "150x150" %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="span5">
    <% if current_user==@user %>
      <% if @user.bills.any? %>
        <h3>My bills (<%= @user.bills.count %>)</h3>
        <ol class="bills">
          <%= render @bills %>
          <%= will_paginate @bills %>
        </ol>
      <% end %>
    <% end %>
  </div>
</div>
