<%= form_for(@bill) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
	<div class="field">
	<%= f.text_field :amount,  placeholder: "Paid amount..." %>
	<%= f.text_field :comment, placeholder: "Add comment..." %>
	<%= f.file_field :ref,     placeholder: "Reference" %>	
	<%= f.submit "Add bill" %>
	</div>
<% end %>
