<%= form_for(@bill) do |f| %>
  <div class="field">
    <%= f.collection_select :group_id, current_user.groups.all, :id, :name, :prompt => 'Select group' %>
    <%= f.text_area :amount, placeholder: "Paid amount"  %>
    <%= f.text_area :comment, placeholder: "Add comment..." %>
    <%= f.file_field :ref,     placeholder: "Reference" %>
  </div>
  <%= f.submit "Create", class: "btn btn-large btn-primary" %>
<% end %>
