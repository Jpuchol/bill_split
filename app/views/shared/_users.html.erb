<div id="group-form" title="Add group"></div>
  <div class="row">
    <% @users.each do |usr| %>
      <div class="span6">
        <p>
          <text><%= usr.email %></text>
          <span class="right-edge">
            <% if current_user?(usr) %>
              <td>Owner</td>
            <% else %>
              <% if usr.member?(usr) %>
                <%= link_to image_tag("remove-image.png", :size => "25x25" ),
                    "#" %>
              <% else %>
                <%= link_to image_tag("add-image.png", :size => "25x25" ),
                    "#" %>
              <% end %>
            <% end %>
          </span>
        </p>
      </div>
    <% end %>
  </div>
</div>
