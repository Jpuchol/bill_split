<div id="group-form" title="Add group"></div>
  <div class="row">
    <% @users.each do |usr| %>
      <div class="span6 offset3">
        <p>
          <text><%= usr.email %></text>
          <span class="right-edge">
            <% if current_user?(usr) %>
              <td>Owner</td>
            <% else %>
              <% if usr.member?(usr) %>
                <%= link_to image_tag("remove-image.png", :size => "25x25" ),
                    "#" %>
              <% else %>
                <%= form_for(current_user.members.build(user_id: usr.id)) do |f| %>
                <div><%= f.hidden_field :user_id %></div>
                <%= f.submit "Add", :type => :image, :src => "images/add-image.png", :size => "25x25" %>
                <% end %>
                <%= link_to image_tag( "add-image.png", :size => "25x25") %>
              <% end %>
            <% end %>
          </span>
        </p>
      </div>
    <% end %>
  </div>
</div>
  </tbody>
</table>
