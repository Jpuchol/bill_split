<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>  
      <section>
        <h4> MyGroups <%= link_to image_tag("add_group.png", :size => "50x50"), newgrp_path,:rel => 'facebox' %></h4>
        <% @mygroups.each do |group| %>
          <p> - <%= link_to group.name, group %> </p>
        <% end %>
      </section>
      <hr>
    </aside>

    <div class="span5 offset1"> 
      <%= render 'shared/bill_list' %>
    </div>
  </div>
<% else %>
  <div class="center hero-unit">
    <h1>Bill Spliting Project</h1>

    <h2>
 	Welcome.
    </h2>

    <%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
  </div>
<% end %>
